<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <link rel="icon" href="{{ asset('img/iconTitle.png') }}">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>

        {% block body %}
            {% for flash_error in app.flashes('verify_email_error') %}
                <div class="bg-red-500 text-white p-4 rounded mb-4" role="alert">{{ flash_error }}</div>
            {% endfor %}


            <h1 class="h1log"> <strong> Se connecter </strong>  </h1>

            <div class="RoleDiv"> 
                
                {# ========================== Registeur parent ============================== #}
                <div class="RoleChoix">
                    <img src="/img/family.png" alt="Image parent" class="w-24 h-24 mx-auto mb-4">
                    <h3> <strong> Je suis un Parent </strong>  </h3>
                    <p style="text-align: center;margin: 10px;"> Manage payments or lessons for your child </p>
                    <br>
                    <a href="{{ path('app_register_role', {role: 'parent'}) }}" style="background-color: #1B4255;
                    color: #FFD700;" class="bg-500 text-gray-300 px-4 py-2 rounded hover:bg-700"> Je me connecte</a>
                </div>

                {# ========================== Registeur eleve ============================== #}
                <div class="RoleChoix">
                    <img src="/img/graduated.png" alt="Image élève" class="w-24 h-24 mx-auto mb-4">
                    <h3> <strong> Je suis un Élève </strong>  </h3>
                    <p style="text-align: center;margin: 10px;"> Have lessons, message your tutor or watch your lessons back </p>
                    <br>
                    <a href="{{ path('app_register_role', {role: 'eleve'}) }}" style="background-color: #1B4255;
                    color: #FFD700;" class="bg-500 text-gray-300 px-4 py-2 rounded hover:bg-700">Je me connecte</a>
                </div>

                {# ========================== Registeur tuteur ============================== #}
                <div class="RoleChoix">
                    <img src="/img/teacher.png" alt="Image tuteur" class="w-24 h-24 mx-auto mb-4">
                    <h3> <strong> Je suis un Tuteur </strong>  </h3>
                    <p style="text-align: center;margin: 10px;"> Give lessons or manage bookings with your customers </p>
                    <br>
                    <a href="{{ path('app_register_role', {role: 'tuteur'}) }}" style="background-color: #1B4255;
                    color: #FFD700;" class="bg-500 text-gray-300 px-4 py-2 rounded hover:bg-700">Je me connecte</a>
                </div>

            
            </div>
        {% endblock %}

    </body>
</html>
