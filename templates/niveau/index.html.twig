{% extends 'base.html.twig' %}

{% block title %} Niveau {% endblock %}

{% block body %}

<div class="listNiveau">
        {% for niveau in niveaux %}
            <ul class="divide-y divide-gray-200 rounded-lg">   
                <li class="px-4 py-2"> 
                    <a href="{{ path('show_niveau',{'id': niveau.id })}}" class="text-gray-200"> 
                        {{ niveau.titre }} 
                    </a>
    
                    {% if is_granted('ROLE_ADMIN') %}
                        <form action="{{ path('delete_niveau', {'id': niveau.id}) }}" method="post" onsubmit="return confirm('Etes-vous sÃ»re ?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete_niveau') }}">
                            <button type="submit" class="text-black font-bold py-2 px-4 rounded" style="background-color: #FFD700;">
                                Supprimer
                            </button>
                        </form>
                    {% endif %}
                    
                </li>
            </ul> <br>            
        {% endfor %}
        <br>
        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('add_niveau') }}" class="text-black font-bold py-2 px-4 rounded" style="background-color: #FFD700;">
                Ajouter un niveau
            </a>
        {% endif %}
    
    </div>


{% endblock %}
