{% extends 'base.html.twig' %}

{% block title %} Détail {{ matiere.nom }} {% endblock %}

{% block body %}

<div class="content mt-12">

    {# --------------------------------  Affichage details matières  ----------------------------- #}

    <div class="container mx-auto px-4 py-8">
        <h1 class="text-2xl font-bold text-center mb-4"> {{ matiere.nom }}</h1><br>
    </div>
    
    <div  class=" p-6 rounded-lg">
        <p class="text-gray-300">
            <strong class="font-semibold"> Description: </strong> <br> {{ matiere.description }} <br>
        </p>
        <br>
    </div>

    {% for tuteur in tuteurs %}
    <p>{{ tuteur.nom }} {{ tuteur.prenom }}</p>
    
{% endfor %}
</div>
{% endblock %}
