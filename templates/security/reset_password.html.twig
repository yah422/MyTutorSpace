{% extends 'base.html.twig' %}

{% block title %}Demande de réinitialisation de mot de passe{% endblock %}

{% block body %}
<section class="min-h-screen flex items-center justify-center bg-[#1B4255] text-gray-300">
    <div class="container max-w-md p-6 rounded-lg shadow-lg" style="background-color: #567C8D;">
        <h1 class="text-2xl font-bold text-center mb-6" style="color: #FFD700;">
            Demande de réinitialisation de mot de passe
        </h1>

        {{ form_start(passForm, { 'attr': { 'class': 'space-y-4' } }) }}
        <div>
            <label for="{{ passForm.password.vars.id }}" class="block text-sm font-medium text-gray-300">Nouveau mot de
                passe</label>
            {{ form_widget(passForm.password, { 'attr': { 'class': 'w-full p-3 bg-gray-300 text-black rounded
            focus:ring-2 focus:ring-[#FFD700]' } }) }}
        </div>
        <button type="submit" class="w-full py-3 rounded font-bold text-[#1B4255]" style="background-color: #FFD700;"
            class="hover:bg-yellow-500 transition">
            Envoyer
        </button>
        {{ form_end(passForm) }}
    </div>
</section>
{% endblock %}