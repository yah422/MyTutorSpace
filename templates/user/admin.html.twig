{% extends 'base.html.twig' %}

{% block title %} Profil Admin {% endblock %}

{% block body %}

    {# J'affiche un titre pour le profil de l'administrateur #}
    <h2>Profil Administrateur</h2>

    {# J'affiche les informations sp√©cifiques de l'administrateur #}
    <p>Nom : {{ user.nom }}</p>
    <p>Email : {{ user.email }}</p>

    {# Je fournis un lien pour modifier le profil de l'utilisateur en utilisant son ID #}
    <a href="{{ path('app_user_edit', { id: user.id }) }}" class="btn btn-primary"> Modifier le profil </a>
{% endblock %}
