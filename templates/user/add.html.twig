{% extends 'base.html.twig' %}

{% block title %} Ajouter un utilisateur {% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <h1 class="text-2xl font-bold mb-6"> Ajouter un utilisateur </h1>

    {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}

    <div class="form-group">
        {{ form_row(form.email, {'attr': {'class': 'form-input'}}) }}
    </div>

    <div class="form-group">
        {{ form_row(form.nom, {'attr': {'class': 'form-input'}}) }}
    </div>

    <div class="form-group">
        {{ form_row(form.prenom, {'attr': {'class': 'form-input'}}) }}
    </div>

    <div class="form-group">
        {{ form_row(form.aboutMe, {'attr': {'class': 'form-input'}}) }}
    </div>

    <!-- HourlyRate -->
    {% if role == 'ROLE_TUTEUR' %}
    <div class="mb-4">
        {{ form_row(form.hourly_rate, {'attr': {'class': 'mt-1 block w-full p-2 bg-[#567C8D]
        text-[#ECECEC] border border-[#70F9D9] rounded focus:ring-2 focus:ring-[#FFD700]
        focus:outline-none'}}) }}
    </div>
    {% endif %}

    <div class="form-group">
        {{ form_row(form.password, {'attr': {'class': 'form-input'}}) }}
    </div>

    <button type="submit" class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600">
        Ajouter l'utilisateur
    </button>

    {{ form_end(form) }}
</div>
{% endblock %}