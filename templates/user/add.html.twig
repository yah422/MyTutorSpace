{% extends 'base.html.twig' %}

{% block title %} Ajouter un utilisateur {% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <h1 class="text-2xl font-bold mb-6"> Ajouter un utilisateur </h1>

    {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}

    <div class="form-group">
        {{ form_row(form.email, {'attr': {'class': 'form-input'}}) }}
    </div>

    <div class="form-group">
        {{ form_row(form.nom, {'attr': {'class': 'form-input'}}) }}
    </div>

    <div class="form-group">
        {{ form_row(form.prenom, {'attr': {'class': 'form-input'}}) }}
    </div>

    <div class="form-group">
        {{ form_row(form.aboutMe, {'attr': {'class': 'form-input'}}) }}
    </div>

    {% if if app.user and 'ROLE_TUTEUR' in app.user.roles %}
    <!-- Taux horaire -->
    <div>
        {{ form_label(form.hourly_rate, 'Taux horaire', {'label_attr': {'class': 'text-[#1B4255]
        font-semibold mb-2 block'}}) }}
        <div class="relative">
            {{ form_widget(form.hourly_rate, {'attr': {
            'class': 'w-full px-4 py-3 rounded-lg border-2 border-gray-200 focus:border-[#70F9D9] focus:ring
            focus:ring-[#70F9D9]/20 transition-all duration-300'
            }}) }}
            <span class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-500">â‚¬/h</span>
        </div>
    </div>
    {% endif %}

    <div class="form-group">
        {{ form_row(form.password, {'attr': {'class': 'form-input'}}) }}
    </div>

    <button type="submit" class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600">
        Ajouter l'utilisateur
    </button>

    {{ form_end(form) }}
</div>
{% endblock %}