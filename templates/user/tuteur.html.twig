{% extends 'base.html.twig' %}

{% block title %} Profil Tuteur {% endblock %}

{% block body %}

{# J'ajoute un titre pour identifier le profil du tuteur #}
<h2>Profil Tuteur</h2>

{# J'affiche le nom et l'email du tuteur #}
<p>Nom : {{ user.nom }}</p>
<p>Email : {{ user.email }}</p>

<br>

{# J'ajoute un lien pour permettre au tuteur de modifier son profil #}
<a href="{{ path('app_user_edit', { id: user.id }) }}" class="btn btn-primary">Modifier le profil</a>
{% endblock %}