{% extends 'base.html.twig' %}

{% block title %}MyTutorSpace - Dashboard{% endblock %}

{% block stylesheets %}
{{ parent() }}
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
{% endblock %}

{% block body %}

<body class="min-h-screen bg-[#ECECEC] flex flex-col">
    {# Main Content #}
    <main class="flex-grow container mx-auto px-4 py-8">
        <h2 class="text-2xl font-bold text-[#1B4255] mb-8">Tableau de bord</h2>
        {% if app.user %}
        <div class="text-[#1B4255] p-4 mb-4 rounded">
            <p class="text-xl">Bienvenue, {{ app.user.prenom }} {{ app.user.nom }} !</p>
        </div>
        {% endif %}
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {# Messagerie #}
            <a href="{{ path('app_message') }}"
                class="group block bg-white rounded-lg shadow-md hover:shadow-xl transition-all duration-300">
                <div class="p-6">
                    <div class="flex items-center gap-4 mb-4">
                        <div
                            class="p-3 rounded-lg bg-[#70F9D9] bg-opacity-20 text-[#1B4255] group-hover:bg-[#FFD700] group-hover:text-[#1B4255] transition-colors">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" viewBox="0 0 24 24" fill="none"
                                stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <rect x="2" y="4" width="20" height="16" rx="2" />
                                <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7" />
                            </svg>
                        </div>
                        <h3 class="text-xl font-semibold text-[#1B4255]">Messagerie</h3>
                    </div>
                    <p class="text-[#567C8D]">Accédez à vos messages et communiquez facilement avec d'autres
                        utilisateurs.</p>
                </div>
            </a>

            {# Forum #}
            <a href="{{ path('app_forum') }}"
                class="group block bg-white rounded-lg shadow-md hover:shadow-xl transition-all duration-300">
                <div class="p-6">
                    <div class="flex items-center gap-4 mb-4">
                        <div
                            class="p-3 rounded-lg bg-[#70F9D9] bg-opacity-20 text-[#1B4255] group-hover:bg-[#FFD700] group-hover:text-[#1B4255] transition-colors">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" viewBox="0 0 24 24" fill="none"
                                stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z" />
                            </svg>
                        </div>
                        <h3 class="text-xl font-semibold text-[#1B4255]">Forum</h3>
                    </div>
                    <p class="text-[#567C8D]">Participez aux discussions et échangez avec la communauté.</p>
                </div>
            </a>

            {# Rendez-vous #}
            <a href="{{ path('app_booking') }}"
                class="group block bg-white rounded-lg shadow-md hover:shadow-xl transition-all duration-300">
                <div class="p-6">
                    <div class="flex items-center gap-4 mb-4">
                        <div
                            class="p-3 rounded-lg bg-[#70F9D9] bg-opacity-20 text-[#1B4255] group-hover:bg-[#FFD700] group-hover:text-[#1B4255] transition-colors">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" viewBox="0 0 24 24" fill="none"
                                stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <rect x="3" y="4" width="18" height="18" rx="2" ry="2" />
                                <line x1="16" y1="2" x2="16" y2="6" />
                                <line x1="8" y1="2" x2="8" y2="6" />
                                <line x1="3" y1="10" x2="21" y2="10" />
                            </svg>
                        </div>
                        <h3 class="text-xl font-semibold text-[#1B4255]">Rendez-vous</h3>
                    </div>
                    <p class="text-[#567C8D]">Consultez vos rendez-vous pris et planifiez-en de nouveaux.</p>
                </div>
            </a>

            {# Cours #}
            <a href="{{ path('app_lecon') }}"
                class="group block bg-white rounded-lg shadow-md hover:shadow-xl transition-all duration-300">
                <div class="p-6">
                    <div class="flex items-center gap-4 mb-4">
                        <div
                            class="p-3 rounded-lg bg-[#70F9D9] bg-opacity-20 text-[#1B4255] group-hover:bg-[#FFD700] group-hover:text-[#1B4255] transition-colors">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" viewBox="0 0 24 24" fill="none"
                                stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z" />
                                <path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z" />
                            </svg>
                        </div>
                        <h3 class="text-xl font-semibold text-[#1B4255]">Cours par matière</h3>
                    </div>
                    <p class="text-[#567C8D]">Explorez et suivez les cours organisés par matière.</p>
                </div>
            </a>

            {# Profil #}
            <a href="{{ path('app_show_user', { 'id': app.user.id }) }}"
                class="group block bg-white rounded-lg shadow-md hover:shadow-xl transition-all duration-300">
                <div class="p-6">
                    <div class="flex items-center gap-4 mb-4">
                        <div
                            class="p-3 rounded-lg bg-[#70F9D9] bg-opacity-20 text-[#1B4255] group-hover:bg-[#FFD700] group-hover:text-[#1B4255] transition-colors">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" viewBox="0 0 24 24" fill="none"
                                stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2" />
                                <circle cx="12" cy="7" r="4" />
                            </svg>
                        </div>
                        <h3 class="text-xl font-semibold text-[#1B4255]">Profil personnel</h3>
                    </div>
                    <p class="text-[#567C8D]">Modifiez vos informations personnelles et gérez votre compte.</p>
                </div>
            </a>

            {# Profil Sauvegardés #}
            <a href="{{ path('app_list_saved_profiles') }}"
                class="group block bg-white rounded-lg shadow-md hover:shadow-xl transition-all duration-300">
                <div class="p-6">
                    <div class="flex items-center gap-4 mb-4">
                        <div
                            class="p-3 rounded-lg bg-[#70F9D9] bg-opacity-20 text-[#1B4255] group-hover:bg-[#FFD700] group-hover:text-[#1B4255] transition-colors">
                            <!-- SVG pour "Profils sauvegardés" -->
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" viewBox="0 0 24 24" fill="none"
                                stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <circle cx="12" cy="7" r="4" />
                                <path d="M5 21v-2a4 4 0 0 1 4-4h6a4 4 0 0 1 4 4v2" />
                            </svg>
                        </div>
                        <h3 class="text-xl font-semibold text-[#1B4255]">Mes profils sauvegardés</h3>
                    </div>
                    <p class="text-[#567C8D]">Accédez à vos profils sauvegardés et gérez vos sélections.</p>
                </div>
            </a>

            {# Mes disponibilités #}
            {% if is_granted('ROLE_TUTEUR') %}
            <a href="{{ path('tutor_availability_index') }}"
                class="group block bg-white rounded-lg shadow-md hover:shadow-xl transition-all duration-300">
                <div class="p-6">
                    <div class="flex items-center gap-4 mb-4">
                        <div
                            class="p-3 rounded-lg bg-[#70F9D9] bg-opacity-20 text-[#1B4255] group-hover:bg-[#FFD700] group-hover:text-[#1B4255] transition-colors">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" viewBox="0 0 24 24" fill="none"
                                stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M3 3h18M8 7h8M8 11h8M3 17h18M6 21v-4M18 21v-4" />
                            </svg>
                        </div>
                        <h3 class="text-xl font-semibold text-[#1B4255]">Mes disponibilités</h3>
                    </div>
                    <p class="text-[#567C8D]">Modifiez ou ajoutez votre disponibilité et participez aux rendez-vous.</p>
                </div>
            </a>
            {% endif %}

            {# Listes des séances #}
            {# {% if is_granted('ROLE_USER') %}
            <a href="{{ path('booking_list') }}"
                class="group block bg-white rounded-lg shadow-md hover:shadow-xl transition-all duration-300">
                <div class="p-6">
                    <div class="flex items-center gap-4 mb-4">
                        <div
                            class="p-3 rounded-lg bg-[#70F9D9] bg-opacity-20 text-[#1B4255] group-hover:bg-[#FFD700] group-hover:text-[#1B4255] transition-colors">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" viewBox="0 0 24 24" fill="none"
                                stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M3 3h18M8 7h8M8 11h8M3 17h18M6 21v-4M18 21v-4" />
                            </svg>
                        </div>
                        <h3 class="text-xl font-semibold text-[#1B4255]">Mes séances</h3>
                    </div>
                    <p class="text-[#567C8D]">Visualiser, annuler et modifier ses séances réserver.</p>
                </div>
            </a>
            {% endif %} #}

            {# ADMIN #}
            {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('admin') }}"
                class="group block bg-white rounded-lg shadow-md hover:shadow-xl transition-all duration-300">
                <div class="p-6">
                    <div class="flex items-center gap-4 mb-4">
                        <div
                            class="p-3 rounded-lg bg-[#70F9D9] bg-opacity-20 text-[#1B4255] group-hover:bg-[#FFD700] group-hover:text-[#1B4255] transition-colors">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" viewBox="0 0 24 24" fill="none"
                                stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M3 3h18M8 7h8M8 11h8M3 17h18M6 21v-4M18 21v-4" />
                            </svg>
                        </div>
                        <h3 class="text-xl font-semibold text-[#1B4255]">planel administrateur</h3>
                    </div>
                    <p class="text-[#567C8D]">Gérer le planel administrateur.</p>
                </div>
            </a>
            {% endif %}

        </div>
    </main>

</body>

{% endblock %}