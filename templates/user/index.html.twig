{% extends 'base.html.twig' %}

{% block title %}Trouver un tuteur{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
<div class="min-h-screen p-8">
    <div class="max-w-7xl mx-auto">
        <h1 class="text-5xl font-bold mb-4">Des tuteurs privés qui s'adaptent à votre emploi du temps</h1>
        <p class="text-xl text-gray-300 mb-8">
            Trouvez votre tuteur idéal et organisez une réunion vidéo gratuite. Puis réservez des cours particuliers en ligne qui s'adaptent à votre emploi du temps.
        </p>

        <button class="bg-emerald-400 text-gray-300 px-6 py-3 rounded-md font-semibold mb-8 hover:bg-emerald-500">
            Réserver un tuteur
        </button>

        <form method="GET" action="{{ path('app_user') }}" class="mb-8">
            <div class="grid grid-cols-2 gap-4">
                <div>
                    <label class="block text-sm font-medium text-gray-300 mb-1">Matière</label>
                    <select name="matiere" class="w-full bg-white border border-gray-300 rounded-md py-2 pl-3 pr-10">
                        <option value="">Toutes les matières</option>
                        {% for matiere in matieres %}
                            <option value="{{ matiere.id }}" {% if matiere.id == selectedMatiereId %}selected{% endif %}>
                                {{ matiere.nom }}
                            </option>
                        {% endfor %}
                    </select>
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-300 mb-1">Niveau</label>
                    <select name="niveau" class="w-full bg-white border border-gray-300 rounded-md py-2 pl-3 pr-10">
                        <option value="">Tous les niveaux</option>
                        {% for niveau in niveaux %}
                            <option value="{{ niveau.id }}" {% if niveau.id == selectedNiveauId %}selected{% endif %}>
                                {{ niveau.titre }}
                            </option>
                        {% endfor %}
                    </select>
                </div>
            </div>
            <button style="background-color:#FFD700" type="submit" class="mt-4 text-black px-4 py-2 rounded-md hover:bg-blue-600">
                Filtrer les résultats
            </button>
        </form>

        <div class="space-y-4">
            {% for tuteur in tuteurs %}
            <a href="{{ path('app_show_user', {'id': tuteur.id}) }}">
                <div class="p-6 rounded-lg shadow-md flex justify-between items-start">
                    <div>
                        <h2 class="text-2xl font-bold mb-2">{{ tuteur.nom }} {{ tuteur.prenom }}</h2>
                        {# <p class="text-gray-600 mb-2">{{ tuteur.universite }}</p> --> à ajouter #}
                        {# <p class="text-gray-700 mb-4">{{ tuteur.aboutMe }}</p> #}
                    </div>
                </div>
            </a>
            {% else %}
                <div class="text-center text-gray-500 py-8">
                    Aucun tuteur ne correspond à vos critères.
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
