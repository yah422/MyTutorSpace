{% extends 'base.html.twig' %}

{% block title %}Trouver un tuteur{% endblock %}

{% block stylesheets %}
{{ parent() }}
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
<div class="min-h-screen p-8">
    {# <div class="max-w-7xl mx-auto"> #}
        <div class="mb-8 p-10">
            <h1 class="flex items-start justify-start content-start text-5xl font-bold mb-4">Des tuteurs privés qui
                s'adaptent à votre emploi du temps</h1>
            <p class="text-xl text-gray-300 mb-8">
                Trouvez votre tuteur idéal et organisez une réunion vidéo gratuite. Puis réservez des cours particuliers
                en
                ligne qui s'adaptent à votre emploi du temps.
            </p>
            {% if app.user %}
            <a href="{{ path('app_message') }}">
                <button class="bg-emerald-400 text-black px-6 py-3 rounded-md font-semibold mb-8 hover:bg-emerald-500">
                    Contacter un tuteur
                </button>
            </a>
            {% else %}
            <button id="reservation-button"
                class="bg-emerald-400 text-black px-6 py-3 rounded-md font-semibold mb-8 hover:bg-emerald-500">
                Contacter un tuteur
            </button>
        </div>


        <!-- Pop-up modal -->
        <div id="reservation-modal" class="hidden fixed inset-0 bg-gray-800 bg-opacity-75 items-center justify-center">
            <div class="bg-white rounded-lg shadow-lg p-6 w-80 text-center">
                <p class="text-lg font-semibold mb-4">Vous devez être connecté pour contacter un tuteur.</p>
                <div class="flex justify-around">
                    <a href="{{ path('app_login') }}"
                        class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600">
                        Se connecter
                    </a>
                    <a href="{{ path('app_role_choice') }}"
                        class="bg-green-500 text-white px-4 py-2 rounded-md hover:bg-green-600">
                        S'inscrire
                    </a>
                </div>
                <button id="close-modal" class="mt-4 text-gray-500 hover:text-gray-700">
                    Fermer
                </button>
            </div>
        </div>
        {% endif %}

        <div class="mb-8 bg-[#ECECEC] rounded-lg shadow-md p-6">
            <form method="GET" action="{{ path('app_user') }}" class="mb-8">
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm font-medium  text-gray-700 mb-1">Matière</label>
                        <select name="matiere"
                            class="w-full bg-white border border-gray-300 rounded-md py-2 pl-3 pr-10">
                            <option value="">Toutes les matières</option>
                            {% for matiere in matieres %}
                            <option value="{{ matiere.id }}" {% if matiere.id==selectedMatiereId %}selected{% endif %}>
                                {{ matiere.nom }}
                            </option>
                            {% endfor %}
                        </select>
                    </div>

                    <div>
                        <label class="block text-sm font-medium  text-gray-700 mb-1">Niveau</label>
                        <select name="niveau" class="w-full bg-white border border-gray-300 rounded-md py-2 pl-3 pr-10">
                            <option value="">Tous les niveaux</option>
                            {% for niveau in niveaux %}
                            <option value="{{ niveau.id }}" {% if niveau.id==selectedNiveauId %}selected{% endif %}>
                                {{ niveau.titre }}
                            </option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
                <button style="background-color:#FFD700" type="submit"
                    class="mt-4 text-black px-4 py-2 rounded-md hover:bg-blue-600">
                    Filtrer les résultats
                </button>
            </form>
        </div>
        <div class="space-y-4">
            {% for tuteur in tuteurs %}
            <a href="{{ path('app_show_user', {'id': tuteur.id}) }}">
                <div style="background-color: #ECECEC;"
                    class="p-6 rounded-lg shadow-md flex flex-row gap-5 content-start justify-start">

                    <div >
                        <img style="width: 100px;height: auto;" src="{{ user.profilePicture 
                        ? asset('uploads/avatars/' ~ user.profilePicture) 
                        : asset('uploads/avatars/default-profile.png') }}"
                            alt="Photo de profil de {{ user.prenom }} {{ user.nom }}"
                            class="object-cover rounded-full shadow-md">
                    </div>
                    <div class="flex flex-row items-center ">
                        <h2 style="color:#1B4255;" class="text-2xl font-bold mb-2">{{ tuteur.nom }} {{ tuteur.prenom }}
                        </h2>
                        {# <p class="text-gray-600 mb-2">{{ tuteur.universite }}</p> --> à ajouter #}
                        {# <p class="text-gray-700 mb-4">{{ tuteur.aboutMe }}</p> #}
                    </div>
                </div>
            </a>
            <br>
            {% else %}
            <div class="text-center text-gray-500 py-8">
                Aucun tuteur ne correspond à vos critères.
            </div>
            {% endfor %}
        </div>

        {#
    </div> #}
</div>
{% endblock %}