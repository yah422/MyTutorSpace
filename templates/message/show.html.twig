<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <link id="iconTitre" rel="icon" href="{{ asset('img/iconTitle.png') }}">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Conversation avec {{ receiver.prenom }} - MyTutorSpace</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>

<body style="background-color: #1B4255;" class="text-gray-300 min-h-screen flex items-center justify-center">
    <div style="background-color: #567C8D;" class="container mx-auto max-w-5xl p-6 rounded-lg shadow-lg">
        <div class="flex flex-col items-center justify-center w-full">
            <h1 style="color: #FFD700;" class="text-4xl font-extrabold mb-8 text-center">
                Conversation avec {{ receiver.prenom }}
            </h1>

            <!-- Section des messages -->
            <div class="w-full bg-gray-700 p-6 rounded-lg shadow-lg mb-6">
                <div class="space-y-4">
                    {% for message in messages %}
                    <div class="flex {{ message.sender == app.user ? 'justify-end' : 'justify-start' }} mb-4">
                        <div class="bg-gray-800 p-4 rounded-lg max-w-xs text-white">
                            <p class="text-sm">{{ message.messageContent }}</p>
                            <span class="block text-xs text-gray-400 mt-2">
                                {{ message.messageDate|date('d/m/Y H:i') }}
                            </span>
                        </div>
                    </div>
                    {% else %}
                    <p class="text-gray-400">Aucun message dans cette conversation.</p>
                    {% endfor %}
                </div>
            </div>

            <!-- Formulaire d'envoi de message -->
            <div class="w-full bg-gray-700 p-4 rounded-lg">
                <h2 style="color: #FFD700;" class="text-xl font-semibold mb-4">Envoyer un message</h2>

                {{ form_start(formMessage, {'attr': {'class': 'space-y-4'}}) }}
                {{ form_row(formMessage.messageContent, {
                'attr': {
                'class': 'w-full p-3 bg-gray-800 rounded-md text-white border-none focus:outline-none focus:ring-2
                focus:ring-yellow-500',
                'placeholder': 'Écrivez votre message...'
                }
                }) }}

                <div class="flex justify-end">
                    <button type="submit" style="background-color: #FFD700;"
                        class="py-3 px-6 rounded-lg text-black font-semibold hover:bg-yellow-500 transition">
                        Envoyer
                    </button>
                </div>
                {{ form_end(formMessage) }}
            </div>

            <!-- Lien vers la boîte de réception -->
            <div class="mt-6">
                <a href="{{ path('received_message') }}" style="background-color: #FFD700;"
                    class="py-3 px-6 rounded-lg text-black font-semibold hover:bg-yellow-500 transition">
                    Retour à la boîte de réception
                </a>
            </div>
        </div>
    </div>
</body>

</html>