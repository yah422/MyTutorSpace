{% extends 'base.html.twig' %}

{% block body %}
<div class="container mx-auto mt-10">
    <h1 class="text-2xl font-bold text-gray-800 mb-6">Messages reçus</h1>
    <ul class="space-y-4">
        {% for correspondent in correspondents %}
        <li class="bg-gray-100 p-4 rounded-lg shadow-lg">
            <a href="{{ path('show_message', { id: correspondent.id }) }}" class="text-blue-500 hover:underline">
                {{ correspondent.username }}
            </a>
        </li>
        {% else %}
        <li class="text-gray-500">Aucun correspondant trouvé.</li>
        {% endfor %}
    </ul>
</div>
{% endblock %}