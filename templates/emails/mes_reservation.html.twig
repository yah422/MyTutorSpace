{% extends 'base.html.twig' %}

{% block title %}Mes réservations{% endblock %}

{% block body %}
<div class="container mx-auto mt-8">
    <h1 class="text-2xl font-bold mb-4">Mes réservations</h1>

    {% for reservation in reservations %}
    <div class="border p-4 mb-4">
        <p><strong>Cours :</strong> {{ reservation.lecon.titre }}</p>
        <p><strong>Date et heure :</strong> {{ reservation.debut|date('d/m/Y H:i') }}</p>
        <p><strong>Statut :</strong> {{ reservation.statut }}</p>
        <a href="{{ path('annuler_reservation', {'id': reservation.id}) }}" class="text-red-500 hover:underline">
            Annuler
        </a>
    </div>
    {% endfor %}
</div>
{% endblock %}