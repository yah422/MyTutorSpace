{% extends 'base.html.twig' %}

{% block title %}Progress Records{% endblock %}

{% block body %}
<h1>Progress Records</h1>

<table>
    <thead>
        <tr>
            <th>Dependent</th>
            <th>Tutoring Booking</th>
            <th>Comment</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for record in progressRecords %}
        <tr>
            <td>{{ record.dependent.email }}</td>
            <td>{{ record.tutoringBooking }}</td>
            <td>{{ record.comment }}</td>
            <td>
                <a href="{{ path('app_progress_show', {id: record.id}) }}">View</a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}