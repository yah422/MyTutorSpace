{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block stylesheets %}
{{ parent() }}
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
{% endblock %}

{% block body %}

<div class="container mx-auto px-4 py-8">

    <!-- Home Page Section -->
    <div style="margin: 0px; height:100vh; justify-content: flex-start;" id="homePage1Part"
        class="h-screen px-4 py-8 flex flex-col transition-transform duration-1000 ease-in-out transform hover:scale-105">
        <div class="PicTitle flex flex-col md:flex-row items-center justify-between">
            <div class="TextTitle flex flex-col flex-start items-start text-left w-1/2 animate-fadeIn">
                <h1
                    class="flex items-start justify-start content-start text-5xl font-bold mb-4 text-yellow-400 transition-all duration-500 ease-in-out transform hover:text-teal-500">
                    My Tutor Space
                </h1>
                <p class="pHomePage text-gray-300 mb-6 transition-all duration-300 ease-in-out">
                    Donner aux tuteurs privés les outils pour façonner l'avenir, une leçon à la fois.
                </p>
                <!-- Search Form -->
                <form action="{{ path('app_search') }}" method="GET" class="relative">
                    <input type="text" name="q"
                        class="bg-white text-blue-900 placeholder-blue-900 px-4 py-2 rounded-full focus:outline-none w-64 transition-all duration-300"
                        placeholder="Rechercher ..." value="{{ app.request.query.get('q') }}" />
                    <button type="submit" class="absolute right-0 top-0 mt-2 mr-4 text-blue-900">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"
                            class="w-5 h-5">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M21 21l-4.35-4.35m2.55-6.15a7.5 7.5 0 11-15 0 7.5 7.5 0 0115 0z" />
                        </svg>
                    </button>
                </form>
            </div>
            <div class="w-1/2 animate-fadeIn delay-300">
                <img src="/img/photoelearning1.svg" alt="photoElearning"
                    class="max-w-full h-auto transition-transform duration-500 transform hover:scale-110">
            </div>
        </div>
    </div>

    <!-- Section Choisir Une Matière -->
    <div style="margin-top: 30px; margin-bottom:30px;" class="text-center mb-8">
        <h2 class="text-4xl font-bold text-teal-300 mb-6">Choisi Une Matière</h2>
        <div class="flex flex-wrap justify-center gap-3 mt-4">
            {% for matiere in matieres %}
            <a href="{{ path('show_matiere', { 'id': matiere.id }) }}">
                <button
                    class="text-black border border-gray-300 px-4 py-2 rounded hover:bg-gray-100 transition-all duration-300 transform hover:scale-110">
                    {{ matiere.nom ?? 'Nom non défini' }}
                </button>
            </a>
            {% endfor %}
            <a href="{{ path('app_matiere') }}">
                <button
                    class="text-black border px-4 py-2 rounded bg-teal-300 hover:bg-white transition-all duration-300 transform hover:scale-110">
                    Toutes les matières
                </button>
            </a>
        </div>
    </div>

    <!-- Section Simple et Efficace -->
    <div class="text-center mb-10 w-full animate-fadeIn delay-400">
        <h2 class="text-5xl font-bold text-yellow-400">Simple et Efficace</h2>
        <br>
        <div class="flex flex-wrap justify-center gap-6 mt-8">
            <div
                class="card flex flex-col items-center bg-yellow-400 text-black p-6 py-10 rounded-lg shadow-lg transition-all duration-300 transform hover:scale-105 hover:shadow-2xl">
                <img src="/img/objectif.png" alt="Icône cible"
                    class="mb-4 transition-all duration-300 transform hover:rotate-12">
                <h3 class="text-2xl font-semibold mb-4">Fixe tes objectifs</h3>
                <p>Donne aux cours privés une direction, un objectif et un but pour réussir.</p>
            </div>

            <div
                class="card flex flex-col items-center bg-yellow-400 text-black p-6 py-10 rounded-lg shadow-lg transition-all duration-300 transform hover:scale-105 hover:shadow-2xl">
                <img src="/img/search.png" alt="icône loupe"
                    class="mb-4 transition-all duration-300 transform hover:rotate-12">
                <h3 class="text-2xl font-semibold mb-4">Trouve ton tuteur</h3>
                <p>Donne aux tuteurs privés toutes les informations pour vous aider à réussir.</p>
            </div>

            <div
                class="card flex flex-col items-center bg-yellow-400 text-black p-6 py-10 rounded-lg shadow-lg transition-all duration-300 transform hover:scale-105 hover:shadow-2xl">
                <img src="/img/learn.png" alt="icône livre"
                    class="mb-4 transition-all duration-300 transform hover:rotate-12">
                <h3 class="text-2xl font-semibold mb-4">Commence à apprendre</h3>
                <p>Donne aux tuteurs privés les clés pour s’adapter et répondre à vos besoins.</p>
            </div>
        </div>
    </div>

    <!-- Section Blocs d'Inform ation avec Images -->
    <div class="space-y-12">
        {% for block in [
        {'title': 'Fixe tes objectifs', 'text': 'Lorem ipsum dolor sit amet...', 'img': '/img/education.svg'},
        {'title': 'Atteins tes buts', 'text': 'Consectetur adipiscing elit...', 'img': '/img/goal.svg'},
        {'title': 'Trouvez les meilleurs tuteurs', 'text': 'Sed do eiusmod tempor incididunt...', 'img':
        '/img/tutors.svg'},
        {'title': 'Tarifs compétitifs', 'text': 'Ut labore et dolore magna aliqua...', 'img': '/img/price.svg'}
        ] %}
        <div
            class="flex flex-col {{ loop.index is odd ? 'md:flex-row' : 'md:flex-row-reverse' }} items-center gap-6 animate-fadeIn">
            <div class="text-white md:w-1/2">
                <h3 class="text-2xl font-bold mb-4">{{ block.title }}</h3>
                <p class="mt-4">{{ block.text }}</p>
            </div>
            <div class="md:w-1/2">
                <img src="{{ block.img }}" alt="{{ block.title }}"
                    class="w-full rounded-lg shadow-lg transform transition-all duration-500 hover:scale-105">
            </div>
        </div>
        {% endfor %}
    </div>

</div>

<script>
    // Animation pour faire apparaître les éléments avec un fade-in
    document.addEventListener('DOMContentLoaded', function () {
        const fadeInElements = document.querySelectorAll('.animate-fadeIn');
        fadeInElements.forEach(element => {
            element.classList.add('opacity-0');
            element.classList.add('transition-opacity');
            setTimeout(() => {
                element.classList.add('opacity-100');
            }, 100); // Légère temporisation pour permettre à l'animation de se déclencher
        });
    });
</script>

{% endblock %}