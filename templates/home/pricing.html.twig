{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}

<div class="bg-gray-100 min-h-screen py-10">
    <div class="container mx-auto px-6">
        <h1 class="text-4xl font-bold text-center text-gray-800 mb-8">Nos Tarifs</h1>
        <p class="text-center text-gray-600 mb-12">Choisissez le plan qui correspond le mieux à vos besoins.</p>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <!-- Basic Plan -->
            <div class="bg-white rounded-2xl shadow-lg p-6 text-center">
                <h2 class="text-2xl font-bold text-gray-700 mb-4">Basique</h2>
                <p class="text-gray-600 mb-6">Idéal pour débuter.</p>
                <p class="text-4xl font-bold text-blue-500 mb-6">9.99€</p>
                <ul class="text-gray-600 mb-6">
                    <li class="mb-2">1 session par mois</li>
                    <li class="mb-2">Accès aux cours de base</li>
                    <li>Support par email</li>
                </ul>
                <button class="bg-blue-500 text-white font-bold py-2 px-4 rounded-full hover:bg-blue-600">
                    Choisir
                </button>
            </div>
            <!-- Standard Plan -->
            <div class="bg-white rounded-2xl shadow-lg p-6 text-center">
                <h2 class="text-2xl font-bold text-gray-700 mb-4">Standard</h2>
                <p class="text-gray-600 mb-6">Pour un apprentissage régulier.</p>
                <p class="text-4xl font-bold text-blue-500 mb-6">19.99€</p>
                <ul class="text-gray-600 mb-6">
                    <li class="mb-2">5 sessions par mois</li>
                    <li class="mb-2">Accès aux cours avancés</li>
                    <li>Support prioritaire</li>
                </ul>
                <button class="bg-blue-500 text-white font-bold py-2 px-4 rounded-full hover:bg-blue-600">
                    Choisir
                </button>
            </div>
            <!-- Premium Plan -->
            <div class="bg-white rounded-2xl shadow-lg p-6 text-center">
                <h2 class="text-2xl font-bold text-gray-700 mb-4">Premium</h2>
                <p class="text-gray-600 mb-6">Pour les apprenants intensifs.</p>
                <p class="text-4xl font-bold text-blue-500 mb-6">29.99€</p>
                <ul class="text-gray-600 mb-6">
                    <li class="mb-2">Sessions illimitées</li>
                    <li class="mb-2">Accès à toutes les ressources</li>
                    <li>Support dédié</li>
                </ul>
                <button class="bg-blue-500 text-white font-bold py-2 px-4 rounded-full hover:bg-blue-600">
                    Choisir
                </button>
            </div>
        </div>
    </div>
</div>
{% endblock %}