{% extends 'base.html.twig' %}

{% block title %}Modifier le sujet - MyTutorSpace{% endblock %}

{% block body %}
<div class="bg-[#ECECEC] min-h-screen flex items-center justify-center p-4">
    <div class="bg-[#1B4255] text-[#ECECEC] rounded-lg p-8 shadow-lg w-full">
        <h1 class="text-2xl font-bold mb-6 text-center text-[#FFD700]">
            Modifier votre topic
        </h1>

        {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
        <div class="space-y-4">
            <div>
                {{ form_label(form.title, 'Titre', {'label_attr': {'class': 'block text-sm font-medium mb-1'}}) }}
                {{ form_widget(form.title, {'attr': {
                'class': 'w-full p-3 rounded-lg border border-[#567C8D] bg-[#ECECEC] text-[#1B4255] focus:ring-[#FFD700]
                focus:ring-2 focus:outline-none placeholder-[#567C8D]',
                'placeholder': 'Titre de votre sujet'
                }}) }}
            </div>

            <div>
                {{ form_label(form.content, 'Contenu', {'label_attr': {'class': 'block text-sm font-medium mb-1'}}) }}
                {{ form_widget(form.content, {'attr': {
                'class': 'w-full p-3 rounded-lg border border-[#567C8D] bg-[#ECECEC] text-[#1B4255] focus:ring-[#FFD700]
                focus:ring-2 focus:outline-none resize-none placeholder-[#567C8D]',
                'rows': '10'
                }}) }}
            </div>

            <div>
                {{ form_label(form.category, 'Cat√©gorie', {'label_attr': {'class': 'block text-sm font-medium mb-1'}})
                }}
                {{ form_widget(form.category, {'attr': {
                'class': 'w-full p-3 rounded-lg border border-[#567C8D] bg-[#ECECEC] text-[#1B4255] focus:ring-[#FFD700]
                focus:ring-2 focus:outline-none placeholder-[#567C8D]'
                }}) }}
            </div>
        </div>

        <button type="submit"
            class="bg-[#70F9D9] text-[#1B4255] font-semibold py-3 px-6 rounded-lg w-full hover:bg-[#567C8D] hover:text-[#ECECEC] transition-all duration-300 flex items-center justify-center gap-2">
            Modifier
        </button>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}