{% extends 'base.html.twig' %}

{% block title %}Nouveau sujet - Forum MyTutorSpace{% endblock %}

{% block body %}
<div class="min-h-screen bg-[#ECECEC]">
    <div class="container mx-auto px-4 py-8">
        <div class="bg-white rounded-lg shadow-md p-6">
            <div class="mb-6">
                <h1 class="text-2xl font-bold text-[#1B4255]">Créer un nouveau sujet</h1>
                <p class="text-[#567C8D] mt-2">Partagez vos questions ou vos connaissances avec la communauté</p>
            </div>

            {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
            <div>
                {{ form_label(form.title, 'Titre', {'label_attr': {'class': 'block text-sm font-medium text-[#1B4255]
                mb-2'}}) }}
                {{ form_widget(form.title, {
                'attr': {
                'class': 'w-full rounded-lg border-[#567C8D] focus:border-[#FFD700] focus:ring focus:ring-[#FFD700]
                focus:ring-opacity-50',
                'placeholder': 'Donnez un titre clair à votre sujet'
                }
                }) }}
                {{ form_errors(form.title) }}
            </div>

            <div>
                {{ form_label(form.category, 'Catégorie', {'label_attr': {'class': 'block text-sm font-medium
                text-[#1B4255] mb-2'}}) }}
                {{ form_widget(form.category, {
                'attr': {
                'class': 'w-full rounded-lg border-[#567C8D] focus:border-[#FFD700] focus:ring focus:ring-[#FFD700]
                focus:ring-opacity-50'
                }
                }) }}
                {{ form_errors(form.category) }}
            </div>

            <div>
                {{ form_label(form.content, 'Contenu', {'label_attr': {'class': 'block text-sm font-medium
                text-[#1B4255] mb-2'}}) }}
                {{ form_widget(form.content, {
                'attr': {
                'class': 'w-full rounded-lg border-[#567C8D] focus:border-[#FFD700] focus:ring focus:ring-[#FFD700]
                focus:ring-opacity-50',
                'rows': '10',
                'placeholder': 'Décrivez votre question ou votre sujet en détail'
                }
                }) }}
                {{ form_errors(form.content) }}
            </div>

            <div class="flex justify-end space-x-4">
                <a href="{{ path('app_forum') }}"
                    class="px-4 py-2 rounded-lg border border-[#1B4255] text-[#1B4255] hover:bg-[#1B4255] hover:text-white transition-colors">
                    Annuler
                </a>
                <button type="submit"
                    class="px-4 py-2 rounded-lg bg-[#1B4255] text-white hover:bg-[#567C8D] transition-colors">
                    Créer le sujet
                </button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}