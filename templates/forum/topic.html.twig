{% extends 'base.html.twig' %}

{% block title %}Nouveau sujet - Forum MyTutorSpace{% endblock %}

{% block body %}
<div class="min-h-screen bg-[#ECECEC]">
    <div class="container mx-auto px-4 py-8">
        <div class="flex justify-between items-center mb-6">
            <h1 class="text-2xl font-bold text-[#1B4255]">{{ topic.title }} - MyTutorSpace</h1>
        </div>

        <div class="bg-[#1B4255] text-gray-300 rounded-lg shadow-md p-6">
            <div class="flex justify-between items-center mb-6">
                {{ topic.content|nl2br }}
            </div>

            {% if app.user == topic.author %}
            <div class="mt-4 text-right">
                <a href="{{ path('app_forum_edit_topic', {'id': topic.id}) }}"
                    class="text-sm text-gray-300 underline hover:text-[#567C8D] transition-colors duration-300">
                    Modifier le sujet
                </a>
                <p class="text-sm text-gray-400">
                    Par {{ topic.author.prenom }}
                </p>
            </div>
            {% endif %}
        </div>

        <div class="container mx-auto px-4 py-8">
            {% for post in topic.posts %}
            <div class="bg-white rounded-lg shadow-md p-6">
                <div class="flex justify-between items-start mb-4">
                    <div class="font-semibold text-[#1B4255]">{{ post.author.prenom }}</div>
                    <div class="text-sm text-gray-500">{{ post.createdAt|date('d/m/Y H:i') }}</div>
                </div>
                <div class="prose max-w-none text-gray-700">
                    {{ post.content|nl2br }}
                </div>
                <br>
                {% if app.user == post.author or is_granted('ROLE_ADMIN') %}
                <a class="bg-[#1B4255] text-white px-4 py-2 rounded-lg hover:bg-[#567C8D]"
                    href="{{ path('app_forum_delete_post', { 'id': post.id }) }}"
                    onclick="return confirm('Etes-vous sûre de vouloir supprimer votre post ?')">Supprimer le Post</a>
                {% endif %}

                {% if app.user == post.author %}
                <div class="mt-2 text-right">
                    <a href="{{ path('app_forum_edit_post', {'id': post.id}) }}"
                        class="text-sm text-[#1B4255] underline hover:text-[#567C8D] transition-colors duration-300">
                        Modifier le post
                    </a>
                </div>
                {% endif %}
            </div>
            <br>
            {% endfor %}
        </div>

        <div class="navigation flex justify-center nb-8 text-[#1B4255]">
            {{ knp_pagination_render(posts) }}
        </div>
        <br>
        {% if app.user %}
        <div class="bg-white rounded-lg shadow-md p-6">
            <div class="mb-6">
                <h1 class="text-2xl font-bold text-[#1B4255]">Créer un nouveau post</h1>
                <p class="text-[#567C8D] mt-2">Partagez vos questions ou vos connaissances avec la communauté</p>
            </div>

            {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
            <div>
                {{ form_label(form.content, 'Contenu', {'label_attr': {'class': 'block text-sm font-medium
                text-[#1B4255] mb-2'}}) }}
                {{ form_widget(form.content, {
                'attr': {
                'class': 'w-full rounded-lg border-[#567C8D] focus:border-[#FFD700] focus:ring focus:ring-[#FFD700]
                focus:ring-opacity-50',
                'rows': '10',
                'placeholder': 'Décrivez votre question ou votre sujet en détail'
                }
                }) }}
                {{ form_errors(form.content) }}
            </div>

            <div class="flex justify-end space-x-4">
                <a href="{{ path('app_forum') }}"
                    class="px-4 py-2 rounded-lg border border-[#1B4255] text-[#1B4255] hover:bg-[#1B4255] hover:text-white transition-colors">
                    Annuler
                </a>
                <button type="submit"
                    class="px-4 py-2 rounded-lg bg-[#1B4255] text-white hover:bg-[#567C8D] transition-colors">
                    Créer le post
                </button>
            </div>
            {{ form_end(form) }}
        </div>
        {% endif %}
    </div>


</div>
{% endblock %}