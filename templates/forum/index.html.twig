{% extends 'base.html.twig' %}

{% block title %}Forum - MyTutorSpace{% endblock %}

{% block body %}
<div class="min-h-screen bg-[#ECECEC]">
    <div class="container mx-auto px-4 py-8">
        <div class="bg-white rounded-lg shadow-md p-6">
            <div class="flex justify-between items-center mb-6">
                <h1 class="text-2xl font-bold text-[#1B4255]">Forum MyTutorSpace</h1>
                {% if is_granted('ROLE_USER') %}
                <a href="{{ path('app_forum_new_topic') }}"
                    class="bg-[#1B4255] text-white px-4 py-2 rounded-lg hover:bg-[#567C8D] transition-colors">
                    Nouveau sujet
                </a>
                {% endif %}
            </div>

            <div class="space-y-4">
                {% for category in categories %}
                <div class="border border-[#567C8D] rounded-lg p-4 hover:border-[#FFD700] transition-colors">
                    <a href="{{ path('app_forum_category', {'id': category.id}) }}" class="block">
                        <h2 class="text-xl font-semibold text-[#1B4255] mb-2">{{ category.name }}</h2>
                        <p class="text-[#567C8D]">{{ category.description }}</p>
                        <div class="mt-2 text-sm text-[#567C8D]">
                            {{ category.topics|length }} sujets
                        </div>

                    </a>

                </div>
                {% endfor %}
            </div>
        </div>
    </div>
    <div class="navigation flex justify-center nb-8 text-[#1B4255]">
        {{ knp_pagination_render(categories) }}
    </div>
</div>
<br>

{% endblock %}