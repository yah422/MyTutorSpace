{% extends 'base.html.twig' %}

{% block title %}{{ category.name }} - Forum MyTutorSpace{% endblock %}

{% block body %}
<div class="min-h-screen bg-[#ECECEC]">
    <div class="container mx-auto px-4 py-8">
        <div class="bg-white rounded-lg shadow-md p-6">
            <div class="mb-6">
                <h1 class="text-2xl font-bold text-[#1B4255]">{{ category.name }}</h1>
                <p class="text-[#567C8D]">{{ category.description }}</p>
            </div>

            <div class="space-y-4">
                {% for topic in topics %}
                <div class="border border-[#567C8D] rounded-lg p-4 hover:border-[#FFD700] transition-colors">
                    <a href="{{ path('app_forum_topic', {'id': topic.id}) }}" class="block">
                        <h2 class="text-xl font-semibold text-[#1B4255] mb-2">{{ topic.title }}</h2>
                    </a>
                    <div class="flex justify-between text-sm text-[#567C8D]">
                        <span>Par {{ topic.author.prenom }}</span>
                        <span>{{ topic.createdAt|date('d/m/Y H:i') }}</span>
                    </div>

                    <div class="mt-2">
                        {% if app.user == topic.author or is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('app_forum_delete_topic', {'id': topic.id}) }}"
                            onclick="return confirm('Etes-vous sûre de vouloir supprimer votre sujet ?')"
                            class="text-red-600 hover:text-red-800">Supprimer le sujet</a>
                        {% endif %}
                    </div>

                    <div>
                        {% if is_granted('ROLE_ADMIN') %}
                        {% if topic.locked %}
                        <a href="{{ path('app_forum_unlock_topic', {'id': topic.id}) }}" class="btn btn-success">
                            <img src="{{ asset('img/unlocked.svg') }}" alt="Déverrouiller">
                        </a>
                        {% else %}
                        <a href="{{ path('app_forum_lock_topic', {'id': topic.id}) }}" class="btn btn-warning">
                            <img src="{{ asset('img/locked.svg') }}" alt="Verrouiller">
                        </a>
                        {% endif %}
                        {% endif %}
                    </div>
                </div>
                {% else %}
                <p class="text-center text-[#567C8D]">Aucun sujet dans cette catégorie</p>
                {% endfor %}
            </div>
        </div>
    </div>

    <div class="navigation flex justify-center mt-8 text-[#1B4255]">
        {{ knp_pagination_render(topics) }}
    </div>
</div>
{% endblock %}