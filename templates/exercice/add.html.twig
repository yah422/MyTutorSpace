{% extends 'base.html.twig' %}

{% block title %}Ajouter un Exercice{% endblock %}

{% block body %}
<div class="container mx-auto p-6">
    <h1 class="text-3xl font-bold mb-4 text-center text-gray-800">Ajouter un Exercice</h1>

    {% if app.session.flashbag().get('success') %}
    <div class="mb-6 p-4 bg-green-200 border border-green-400 text-green-800 rounded">
        {{ app.session.flashbag().get('success')|first }}
    </div>
    {% endif %}

    <div class="bg-white p-6 rounded-lg shadow-md">
        {{ form_start(form) }}
        <div class="space-y-4">
            {% for field in form %}
                <div class="mb-4">
                    <label for="{{ field.vars.id }}" class="block text-sm font-medium text-gray-700">
                        {{ form_label(field) }}
                    </label>
                    <div class="mt-1">
                        {{ form_widget(field, {'attr': {'class': 'w-full p-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500'}}) }}
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="mt-6">
            <button type="submit"
                class="w-full bg-blue-600 text-white py-3 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500">
                Ajouter l'Exercice
            </button>
        </div>
        {{ form_end(form) }}
        
    </div>
</div>
{% endblock %}