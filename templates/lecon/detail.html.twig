{% extends 'base.html.twig' %}

{% block title %}{{ lecon.titre }} - Détails{% endblock %}

{% block body %}
<div class="min-h-screen bg-gradient-to-br from-[#1B4255] to-[#567C8D] py-16">
    <div class="container max-w-4xl mx-auto px-4">
        <!-- En-tête de la leçon -->
        <div class="mb-12 slide-in">
            <div class="flex justify-between items-start">
                <div>
                    <h1 class="text-[#70F9D9] text-4xl font-bold mb-2">{{ lecon.titre }}</h1>
                    <div class="h-1 w-24 bg-[#FFD700] rounded-full"></div>
                </div>
                {% if is_granted('ROLE_USER') and not is_granted('ROLE_TUTEUR') and app.user != lecon.user %}
                <a href="{{ path('app_booking') }}"
                    class="bg-[#70F9D9] text-[#1B4255] px-6 py-3 rounded-lg font-semibold hover:bg-[#5CD9B9] transform hover:-translate-y-1 transition-all duration-300 shadow-lg">
                    <div class="flex items-center space-x-2">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                        <span>Réserver ce cours</span>
                    </div>
                </a>
                {% endif %}
            </div>
        </div>

        <!-- Détails de la leçon -->
        <div
            class="bg-white/95 backdrop-blur-sm rounded-2xl shadow-xl p-8 mb-8 transform hover:scale-[1.01] transition-all duration-300 fade-in">
            <div class="grid gap-6">
                <!-- Description -->
                <div class="space-y-4">
                    <div class="flex items-center space-x-3 text-[#1B4255]">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                        </svg>
                        <h2 class="text-xl font-semibold">Description</h2>
                    </div>
                    <p class="text-gray-600 leading-relaxed pl-9">{{ lecon.description }}</p>
                </div>

                <!-- Informations -->
                <div class="grid md:grid-cols-2 gap-6 pt-4 border-t border-gray-100">
                    <div class="flex items-center space-x-3">
                        <div class="p-2 bg-[#1B4255]/10 rounded-lg">
                            <svg class="w-5 h-5 text-[#1B4255]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                            </svg>
                        </div>
                        <div>
                            <p class="text-sm text-gray-500">Date de création</p>
                            <p class="text-[#1B4255] font-medium">{{ lecon.dateCreation|date('d/m/Y') }}</p>
                        </div>
                    </div>

                    <div class="flex items-center space-x-3">
                        <div class="p-2 bg-[#1B4255]/10 rounded-lg">
                            <svg class="w-5 h-5 text-[#1B4255]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                        </div>
                        <div>
                            <p class="text-sm text-gray-500">Taux horaire</p>
                            <p class="text-[#1B4255] font-medium">{{ lecon.hourlyRate }}€/h</p>
                        </div>
                    </div>
                </div>

                <!-- Document PDF -->
                {% if lecon.pdfPath %}
                <div class="pt-4 border-t border-gray-100">
                    <a href="{{ asset('uploads/pdfs/' ~ lecon.pdfPath) }}"
                        class="inline-flex items-center space-x-2 text-[#1B4255] hover:text-[#567C8D] transition-colors">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                        </svg>
                        <span class="font-medium">Télécharger le support de cours</span>
                    </a>
                </div>
                {% endif %}
            </div>
        </div>

        <!-- Actions -->
        {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_TUTEUR') %}
        <div class="flex flex-wrap gap-4 mb-12 fade-in">
            <a href="{{ path('edit_lecon', {'id': lecon.id} ) }}"
                class="inline-flex items-center px-6 py-3 bg-[#FFD700] text-[#1B4255] rounded-lg font-semibold hover:bg-[#FFE44D] transform hover:-translate-y-1 transition-all duration-300 shadow-lg">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                </svg>
                <span>Modifier</span>
            </a>

            <a href="{{ path('add_lecon', {'id': lecon.id} ) }}"
                class="inline-flex items-center px-6 py-3 bg-[#70F9D9] text-[#1B4255] rounded-lg font-semibold hover:bg-[#5CD9B9] transform hover:-translate-y-1 transition-all duration-300 shadow-lg">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                </svg>
                <span>Ajouter un cours</span>
            </a>
        </div>
        {% endif %}

        <!-- Exercices et Ressources -->
        {% if lecon.exercice is not empty %}
        <div class="space-y-6 fade-in">
            <h2 class="text-[#FFD700] text-2xl font-bold mb-6">Exercices et Ressources</h2>

            {% for exercice in lecon.exercice %}
            <div class="bg-white/90 backdrop-blur-sm rounded-xl overflow-hidden">
                <a href="{{ path('show_exercice', {'id': exercice.id }) }}"
                    class="block p-6 hover:bg-gray-50 transition-colors">
                    <h3 class="text-[#1B4255] text-xl font-semibold mb-2 flex items-center">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                        </svg>
                        {{ exercice.titre }}
                    </h3>

                    {% if exercice.ressource is not empty %}
                    <div class="mt-4 pl-4 border-l-2 border-[#70F9D9]">
                        {% for ressource in exercice.ressource %}
                        <a href="{{ path('show_ressource', {'id': ressource.id }) }}"
                            class="block py-2 text-gray-600 hover:text-[#1B4255] transition-colors">
                            <div class="flex items-center">
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M13 10V3L4 14h7v7l9-11h-7z" />
                                </svg>
                                {{ ressource.titre }}
                            </div>
                        </a>
                        {% endfor %}
                    </div>
                    {% endif %}
                </a>
            </div>
            {% endfor %}
        </div>
        {% endif %}
    </div>
</div>

<style>
    .fade-in {
        opacity: 0;
        animation: fadeIn 0.6s ease-out forwards;
    }

    .slide-in {
        opacity: 0;
        transform: translateX(-20px);
        animation: slideIn 0.6s ease-out forwards;
    }

    @keyframes fadeIn {
        to {
            opacity: 1;
        }
    }

    @keyframes slideIn {
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }
</style>
{% endblock %}