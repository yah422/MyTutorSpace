{% extends 'base.html.twig' %}

{% block title %}Modifier un cours{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto bg-[#1B4255] p-8 rounded-lg shadow-md mt-10">
    <h1 class="text-3xl font-bold mb-6">Modifier le cours</h1>

    {{ form_start(form) }}

    <div class="mb-4">
        {{ form_label(form.titre, 'Titre', {'label_attr': {'class': 'block text-lg font-semibold text-[#ECECEC]'}}) }}
        {{ form_widget(form.titre, {'attr': {'class': 'mt-1 block w-full p-2 bg-[#567C8D] text-[#ECECEC] border
        border-[#70F9D9] rounded focus:ring-2 focus:ring-[#FFD700] focus:outline-none'}}) }}
        {{ form_errors(form.titre) }}
    </div>

    <div class="mb-4">
        {{ form_label(form.description, 'Description', {'label_attr': {'class': 'block text-lg font-semibold
        text-[#ECECEC]'}}) }}
        {{ form_widget(form.description, {'attr': {'class': 'mt-1 block w-full p-2 bg-[#567C8D] text-[#ECECEC] border
        border-[#70F9D9] rounded focus:ring-2 focus:ring-[#FFD700] focus:outline-none'}}) }}
        {{ form_errors(form.description) }}
    </div>

    <div class="mb-4">
        {{ form_label(form.dateCreation, 'Date de création', {'label_attr': {'class': 'block text-lg font-semibold
        text-[#ECECEC]'}}) }}
        {{ form_widget(form.dateCreation, {'attr': {'class': 'mt-1 block w-full p-2 bg-[#567C8D] text-[#ECECEC] border
        border-[#70F9D9] rounded focus:ring-2 focus:ring-[#FFD700] focus:outline-none'}}) }}
        {{ form_errors(form.dateCreation) }}
    </div>

    <div class="mb-4">
        {{ form_label(form.matiere, 'Matière', {'label_attr': {'class': 'block text-lg font-semibold text-[#ECECEC]'}})
        }}
        {{ form_widget(form.matiere, {'attr': {'class': 'mt-1 block w-full p-2 bg-[#567C8D] text-[#ECECEC] border
        border-[#70F9D9] rounded focus:ring-2 focus:ring-[#FFD700] focus:outline-none'}}) }}
        {{ form_errors(form.matiere) }}
    </div>

    <div class="mb-4">
        {{ form_label(form.niveau, 'Niveau', {'label_attr': {'class': 'block text-lg font-semibold text-[#ECECEC]'}}) }}
        {{ form_widget(form.niveau, {'attr': {'class': 'mt-1 block w-full p-2 bg-[#567C8D] text-[#ECECEC] border
        border-[#70F9D9] rounded focus:ring-2 focus:ring-[#FFD700] focus:outline-none'}}) }}
        {{ form_errors(form.niveau) }}
    </div>

    <div class="mb-4">
        {{ form_label(form.user, 'Auteur', {'label_attr': {'class': 'block text-lg font-semibold text-[#ECECEC]'}}) }}
        {{ form_widget(form.user, {'attr': {'class': 'mt-1 block w-full p-2 bg-[#567C8D] text-[#ECECEC] border
        border-[#70F9D9] rounded focus:ring-2 focus:ring-[#FFD700] focus:outline-none'}}) }}
        {{ form_errors(form.user) }}
    </div>

    <div class="mb-4">
        {{ form_label(form.users, 'Élèves', {'label_attr': {'class': 'block text-lg font-semibold text-[#ECECEC]'}}) }}
        {{ form_widget(form.users, {'attr': {'class': 'mt-1 block w-full p-2 bg-[#567C8D] text-[#ECECEC] border
        border-[#70F9D9] rounded focus:ring-2 focus:ring-[#FFD700] focus:outline-none'}}) }}
        {{ form_errors(form.users) }}
    </div>

    <div class="mb-4">
        {{ form_label(form.pdfFile, 'Document PDF', {'label_attr': {'class': 'block text-lg font-semibold
        text-[#ECECEC]'}}) }}
        {{ form_widget(form.pdfFile, {'attr': {'class': 'mt-1 block w-full p-2 bg-[#567C8D] text-[#ECECEC] border
        border-[#70F9D9] rounded focus:ring-2 focus:ring-[#FFD700] focus:outline-none'}}) }}
        {{ form_errors(form.pdfFile) }}
    </div>

    <div class="mt-6 text-center">
        <button type="submit"
            class="bg-[#FFD700] hover:bg-[#70F9D9] text-[#1B4255] font-bold py-2 px-6 rounded transition duration-300">
            Enregistrer les modifications
        </button>
    </div>

    {{ form_end(form) }}

    <div class="mt-6 text-center">
        <a class="text-[#70F9D9] hover:underline" href="{{ path('app_lecon') }}">Retour à la liste des leçons</a>
    </div>
</div>
{% endblock %}