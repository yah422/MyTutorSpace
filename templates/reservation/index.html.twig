{% extends 'base.html.twig' %}

{% block title %}Mes réservations{% endblock %}

{% block body %}
<div class="container mx-auto p-6">
    <h1 class="text-3xl font-semibold mb-6"> Mes Réservations </h1>

    <div class="overflow-x-auto bg-white shadow-md rounded-lg">
        <table class="min-w-full table-auto">
            <thead class="bg-gray-100">
                <tr>
                    <th class="px-4 py-2 text-left text-gray-600">Date début</th>
                    <th class="px-4 py-2 text-left text-gray-600">Date fin</th>
                    <th class="px-4 py-2 text-left text-gray-600">Statut</th>
                    <th class="px-4 py-2 text-left text-gray-600">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for reservation in reservations %}
                <tr class="border-t hover:bg-gray-50">
                    <td class="px-4 py-2">{{ reservation.dateDebut|date('d/m/Y H:i') }}</td>
                    <td class="px-4 py-2">{{ reservation.dateFin|date('d/m/Y H:i') }}</td>
                    <td class="px-4 py-2">
                        <span
                            class="inline-block px-2 py-1 rounded-full 
                            {% if reservation.isCancelled %} bg-red-200 text-red-800 {% else %} bg-green-200 text-green-800 {% endif %}">
                            {{ reservation.isCancelled ? 'Annulée' : 'Active' }}
                        </span>
                    </td>
                    <td class="px-4 py-2">
                        {% if not reservation.isCancelled %}
                        <form method="post" action="{{ path('reservation_cancel', {id: reservation.id}) }}"
                            class="inline">
                            <button type="submit" class="text-red-500 hover:text-red-700 font-semibold">
                                Annuler
                            </button>
                        </form>
                        {% endif %}
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}