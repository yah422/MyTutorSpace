{# templates/reservation/index.html.twig #}
{% extends 'base.html.twig' %}

{% block stylesheets %}
{{ parent() }}
<link href='https://cdn.jsdelivr.net/npm/@fullcalendar/core@4.4.0/main.min.css' rel='stylesheet' />
<link href='https://cdn.jsdelivr.net/npm/@fullcalendar/daygrid@4.4.0/main.min.css' rel='stylesheet' />
<link href='https://cdn.jsdelivr.net/npm/@fullcalendar/timegrid@4.4.0/main.min.css' rel='stylesheet' />
{% endblock %}

{% block body %}
<div class="container mx-auto px-4 mt-8">
    <h1 class="text-3xl font-bold mb-6">Réservation de cours</h1>

    <div class="grid grid-cols-1 md:grid-cols-12 gap-6">
        <div class="md:col-span-4">
            <div class="bg-white rounded-lg shadow-md">
                <div class="p-6">
                    <h5 class="text-xl font-semibold mb-4">1. Prestation sélectionnée</h5>

                    <div class="mb-4">
                        <label for="lecon" class="block text-sm font-medium text-gray-700 mb-2">Choisir une
                            leçon</label>
                        <select id="lecon"
                            class="w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500">
                            {% for lecon in lecons %}
                            <option value="{{ lecon.id }}">
                                {{ lecon.titre }} - {{ lecon.hourlyRate }}€
                            </option>
                            {% endfor %}
                        </select>
                    </div>

                    <div class="mt-6">
                        <label class="block text-sm font-medium text-gray-700 mb-3">Avec qui ?</label>
                        <div class="flex flex-wrap gap-3">
                            {% for tutor in tutors %}
                            <div class="tutor-group">
                                <input type="radio" name="tutor" value="{{ tutor.id }}" id="tutor_{{ tutor.id }}"
                                    class="hidden peer">
                                <label for="tutor_{{ tutor.id }}" class="flex items-center px-4 py-2 rounded-full border border-gray-300 cursor-pointer
                                                    transition-colors duration-200 ease-in-out
                                                    peer-checked:bg-blue-500 peer-checked:text-white peer-checked:border-blue-500
                                                    hover:bg-gray-50 peer-checked:hover:bg-blue-600">
                                    <span
                                        class="w-8 h-8 rounded-full bg-gray-200 flex items-center justify-center mr-2">
                                        {{ tutor.prenom|first|upper }}
                                    </span>
                                    {{ tutor.prenom }}
                                </label>
                            </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="md:col-span-8">
            <div class="bg-white rounded-lg shadow-md">
                <div class="p-6">
                    <h5 class="text-xl font-semibold mb-4">2. Choix de la date & heure</h5>
                    <div id="calendar" class="mb-6"></div>
                    <div id="time-slots" class="flex flex-wrap gap-2">
                        <!-- Time slots will be inserted here dynamically -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script src='https://cdn.jsdelivr.net/npm/@fullcalendar/core@4.4.0/main.min.js'></script>
<script src='https://cdn.jsdelivr.net/npm/@fullcalendar/daygrid@4.4.0/main.min.js'></script>
<script src='https://cdn.jsdelivr.net/npm/@fullcalendar/timegrid@4.4.0/main.min.js'></script>
<script src='https://cdn.jsdelivr.net/npm/@fullcalendar/interaction@4.4.0/main.min.js'></script>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var calendarEl = document.getElementById('calendar');
        var calendar = new FullCalendar.Calendar(calendarEl, {
            plugins: ['dayGrid', 'timeGrid', 'interaction'],
            defaultView: 'dayGridWeek',
            locale: 'fr',
            selectable: true,
            select: function (info) {
                loadTimeSlots(info.start);
            }
        });
        calendar.render();

        function loadTimeSlots(date) {
            const tutorId = document.querySelector('input[name="tutor"]:checked')?.value;
            if (!tutorId) {
                alert('Veuillez sélectionner un tuteur');
                return;
            }

            fetch(`/reservation/slots?tutor=${tutorId}&date=${date.toISOString()}`)
                .then(response => response.json())
                .then(slots => {
                    displayTimeSlots(slots);
                });
        }

        function displayTimeSlots(slots) {
            const container = document.getElementById('time-slots');
            container.innerHTML = slots.map(slot => `
                    <button onclick="selectTimeSlot('${slot}')"
                            class="px-4 py-2 rounded-md border border-gray-300 hover:bg-gray-50 
                                focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                        ${slot}
                    </button>
                `).join('');
        }
    });

    function selectTimeSlot(time) {
        const leconId = document.getElementById('lecon').value;
        const tutorId = document.querySelector('input[name="tutor"]:checked').value;

        fetch('/reservation/create', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({
                leconId: leconId,
                tutorId: tutorId,
                time: time
            })
        })
            .then(response => response.json())
            .then(data => {
                if (data.status === 'success') {
                    alert('Réservation effectuée avec succès!');
                }
            });
    }
</script>
{% endblock %}